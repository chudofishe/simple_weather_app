<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.chudofishe.weatherapp.ui.main.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main"/>
    <fragment
        android:id="@+id/currentWeatherFragment"
        android:name="com.chudofishe.weatherapp.ui.current_weather.CurrentWeatherFragment"
        android:label="fragment_forecast_details"
        tools:layout="@layout/fragment_forecast_details" >
        <argument
            android:name="forecastDetails"
            app:argType="com.chudofishe.weatherapp.domain.model.ForecastDetails" />
    </fragment>
    <fragment
        android:id="@+id/forecastListFragment"
        android:name="com.chudofishe.weatherapp.ui.forecast_list.ForecastListFragment"
        android:label="ForecastListFragment"
        tools:layout="@layout/fragment_forecast_list">
        <action
            android:id="@+id/action_forecastListFragment_to_currentWeatherFragment"
            app:destination="@id/currentWeatherFragment" />
    </fragment>

</navigation>